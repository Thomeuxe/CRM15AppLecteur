{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <img src="https://unsplash.it/200/300"
                     srcset="http://placehold.it/360X200 1x,
                             http://placehold.it/720X400 2x"
                     class="img-responsive img-rounded">
            </div>
            <div class="col-sm-12">
                <h1 class="title">{{ review.title }}</h1>
                <p class="text-muted">Publi√©e par <a href="#">{{ review.user.username }}</a></p>

                <p>{{ review.synopsis }}</p>
            </div>
        </div>

        <hr>

        <h2>Critiques</h2>
        {% for critic in review.critics %}
            {{ include('critic/show.html.twig', { 'critic': critic }) }}
        {% endfor %}
    </div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
