{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}
    <div class="container">

        <div class="page-header">
            <h1>Réservation</h1>
            <p>Réservez les plages de dates pour mettre en avant vos fiches de lectures.</p>
        </div>

        {% if valid  is defined %}
            <div class="alert alert-success" role="alert">Votre demande de réservation a bien été enregistrée. <a href="{{ path('app_booking_index') }}">Voir mes réservations</a></div>
        {% endif %}

        {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/vendor/jquery-ui/themes/base/datepicker.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/datepicker.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/vendor/jquery-ui/ui/core.js') }}"></script>
    <script src="{{ asset('assets/vendor/jquery-ui/ui/datepicker.js') }}"></script>
    <script src="{{ asset('assets/vendor/jquery-ui/ui/i18n/datepicker-fr.js') }}"></script>
    <script src="{{ asset('assets/js/bookings.js') }}"></script>
{% endblock %}